<% include ./../_admin_theme/header.ejs %>
<div class="page-wrapper">
	<% include ./../_admin_theme/nav.ejs %>
	<!-- Content -->
	<section id="login" class=" pv-45 clearfix mb-5 ">
		<div class="container ">
			<div class="row justify-content-md-center">
				<div class="col-md-6 mx-auto" >
					<!-- form card login -->
					<div class="card rounded-0">
						<div class="card-header">
							<h3 class="mb-0">Admin Login </h3>
						</div>
						<div class="card-body">
							<%- messages('admin/message', locals) %>
							<form class="form m-0" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST" action="/admin">
								<div class="form-group">
									<label>Email Address</label>
									<input type="text" class="form-control form-control-md rounded-0" name="email" required="">
								</div>
								<div class="form-group">
									<label>Password</label>
									<input type="password" class="form-control form-control-md rounded-0" required="" name="password">
								</div>
								<button type="submit" class="btn btn-default btn-md float-right" id="btnLogin">Login</button>
							</form>
						</div>
						<!--/card-block-->
					</div>
					<!-- /form card login -->
				</div>
			</div>
		</div>
	</section>
	<!-- section end -->
</div>
<% include ./../_admin_theme/footer.ejs %>