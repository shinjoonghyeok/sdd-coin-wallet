<% include ./../_website_theme/header.ejs %>
<div class="page-wrapper">
	<% include ./../_website_theme/nav.ejs %>
	<!-- Content -->
	<section id="login" class=" pv-45 clearfix mb-5 ">
		<div class="container pv-45">
			<div class="row justify-content-md-center">
				<div class="col-md-6 mx-auto" data-animation-effect="fadeInDownSmall">
					<!-- form card login -->
					<div class="card rounded-0">
						<div class="card-header">
							<h3 class="mb-0"><%= __("forgot_Title") %></h3>
						</div>
						<div class="card-body">
							<% if(errors) { errors.forEach(function(error) { %>
							<div class="alert alert-danger  alert-dismissible fade show" role="alert">
								<%= error.msg %>
								<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
							</div>
							<%})} %>

							<form class="form m-0" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST" action="forgot-password">
								<div class="form-group">
									<label for="emailAddress">Email Address</label>
									<input type="text" class="form-control form-control-md rounded-0" name="emailAddress" id="emailAddress" required="">
								</div>
								<button type="submit" class="btn btn-default btn-md btn-block" id="btnLogin"><%= __("common_Submit") %></button>
							</form>
						</div>
					<!--/card-block-->
					</div>
					<!-- /form card login -->
					<div class="text-center mt-4"><%= __("forgot_Back") %><a href="/login"> <%= __("forgot_Login") %></a></div>
				</div>
			</div>
		</div>
	</section>
	<!-- section end -->
</div>
<% include ./../_website_theme/footer.ejs %>