<% include ./../_website_theme/header.ejs %>
<div class="page-wrapper">
	<% include ./../_website_theme/nav.ejs %>
	<!-- Content -->
	<section id="login" class=" pv-45 clearfix mb-5 ">
		<div class="container ">
			<div class="row justify-content-md-center">
				<div class="col-md-6 mx-auto">
					<!-- form card login -->
					<div class="card rounded-0">
						<div class="card-header">
							<h3 class="mb-0"><%= __("login_Title") %></h3>
						</div>
						<div class="card-body">
							<%- messages('website/message', locals) %>
							<form class="form m-0" role="form" autocomplete="off" id="formLogin" novalidate="" method="POST" action="/login">
								<div class="form-group">
									<label>Email Address</label>
									<input type="text" class="form-control form-control-md rounded-0" name="email" required="">
								</div>
								<div class="form-group">
									<label><%= __("login_Password") %></label>
									<input type="password" class="form-control form-control-md rounded-0" required="" name="password">
								</div>
								<div class="clearfix">
									<div class="float-left pt-2">
										<a href="/forgot-password"><%= __("login_Forgot") %></a>
									</div>
									<div class="float-right">
										<input type="submit" class="btn btn-default btn-md float-right" id="btnLogin" value="<%= __("login_LoginBTN") %>">
									</div>
								</div>
								<hr class="mt-2">
								<div class="text-center">
									<%= __("login_Check_Regist") %> <a href="/register"><%= __("login_Regist") %></a>
								</div>
							</form>
						</div>
					<!--/card-block-->
					</div>
				<!-- /form card login -->
				</div>
			</div>
		</div>
	</section>
	<!-- section end -->
</div>
<% include ./../_website_theme/footer.ejs %>
<script>
	$(document).ready(function () {
		$("input").keypress(function () {
			removeAlert();
		});
	});
</script>